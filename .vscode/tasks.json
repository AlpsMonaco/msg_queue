{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build demo",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe:",
				"demo\\demo.exe",
				"*.cpp",
				"demo\\main.cpp"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "编译器: cl.exe"
		}
	]
}